worker_rlimit_nofile <%= @worker_rlimit %>;
user  <%= @user %>;
worker_processes  <%= @worker_processes %>;

error_log  /var/log/nginx/error.log warn;
pid        /run/nginx.pid;


events {
    worker_connections  <%= @worker_connections %>;
}


http {
    include       /usr/local/openresty/nginx/conf/mime.types;
    default_type  application/octet-stream;

    set_real_ip_from 10.50.0.0/16;
    real_ip_header X-Forwarded-For;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    log_format combined_custom '$http_x_forwarded_for - [$time_iso8601] '
                      '"$request" $status $body_bytes_sent '
                      '"$http_referer" "$http_user_agent"';

    log_format upstream '$http_x_forwarded_for - [$time_iso8601] "$request" $status '
    	                'upstream $upstream_response_time request $request_time ';

    access_log  /var/log/nginx/access.log  main;

    sendfile        on;
    #tcp_nopush     on;
    client_max_body_size <%= @client_max_body_size %>;
    keepalive_timeout  <%= @keepalive_timeout %>;

<% if gzip != 'no' -%>
    gzip  on;
<% end -%>

    server {
        listen *:<%= @port %>;
        server_name     localhost _;
        location /nginx_status {
                stub_status on;
                access_log off;
                allow 127.0.0.1;
                allow 10.50.7.1;
                allow 10.50.5.1;
                deny all;
        }
    }

    include /usr/local/openresty/nginx/conf/conf.d/*.cnf;
    include /usr/local/openresty/nginx/conf/sites/*.conf;
}
